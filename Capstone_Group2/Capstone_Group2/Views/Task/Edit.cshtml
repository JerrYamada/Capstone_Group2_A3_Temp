@model TimetableTask

@{
    ViewData["Title"] = "Edit the task";
}
<h1>@ViewData["Title"]</h1>

<form asp-controller="Task" asp-action="ProcessEditRequest" method="post" enctype="application/x-www-form-urlencoded">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="TaskName"></label>
        <input asp-for="TaskName" class="form-control" />
        <span asp-validation-for="TaskName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoryId">Task Category</label>
        <select asp-for="CategoryId" class="form-control">
            @if (Model.CategoryId == 1)
            {
                <option value="1" selected>School</option>
                <option value="2">Work</option>

            }
            else if (Model.CategoryId == 2)
            {
                <option value="1">School</option>
                <option value="2" selected>Work</option>
            }           
            @*The third category is not updated in the database, uncomment this when it got fixed*@
            @*<option value="3">Personal</option>*@
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TaskDescription"></label>
        <input asp-for="TaskDescription" class="form-control" />
        <span asp-validation-for="TaskDescription" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Start_Date"></label>
        <input asp-for="Start_Date" type="datetime-local" class="form-control" />
        <span asp-validation-for="Start_Date" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="End_Date"></label>
        <input asp-for="End_Date" type="datetime-local" class="form-control" />
        <span asp-validation-for="End_Date" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PriorityId">Priority Type</label>
        <select asp-for="PriorityId" class="form-control">
            @if (Model.PriorityId == 1)
            {
                <option value="1" selected>Low</option>
                <option value="2">Medium</option>
                <option value="3">High</option>
            }
            else if (Model.PriorityId == 2)
            {
                <option value="1">Low</option>
                <option value="2" selected>Medium</option>
                <option value="3">High</option>

            } 
            else
            {
                <option value="1">Low</option>
                <option value="2">Medium</option>
                <option value="3" selected>High</option>

            }          
        </select>
        <span asp-validation-for="PriorityId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StatusId">Status Type</label>
        <select asp-for="StatusId" class="form-control">
            @if (Model.StatusId == 1)
            {
                <option value="1" selected>Not Done</option>
                <option value="2">Due Soon</option>
                <option value="3">Finished</option>
            }
            else if (Model.StatusId == 2)
            {
                <option value="1">Not Done</option>
                <option value="2" selected>Due Soon</option>
                <option value="3">Finished</option>

            }
            else
            {
                <option value="1">Not Done</option>
                <option value="2">Due Soon</option>
                <option value="3" selected>Finished</option>

            }   
        </select>
        <span asp-validation-for="StatusId" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="TimetableId" />


    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-controller="Task" asp-action="GetAllTasks" class="btn btn-primary">Cancel</a>


</form>